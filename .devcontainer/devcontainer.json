{
  "name": "Python 3",
  // If you have a Dockerfile named "Dockerfile" in the .devcontainer folder,
  // you can replace the "image" property with a "build" object. But for now:
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        // Python-related
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Docker support (Dockerfile syntax, Docker commands)
        "ms-azuretools.vscode-docker",

        // Remote devcontainer support (especially if you also open locally in VS Code)
        "ms-vscode-remote.remote-containers",

        // Playwright extension (optional but helpful if you use Playwright)
        "ms-playwright.playwright"
      ]
    }
  },

  // Optional: This command installs packages from packages.txt & requirements.txt,
  // plus Streamlit, then prints a confirmation.
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y < packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",

  // Runs Streamlit after attaching to the container
  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
